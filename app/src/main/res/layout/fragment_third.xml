<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ThirdFragment"
    android:background="@drawable/third_frag_bg">


    <ImageView
        android:id="@+id/iv_thinking_cloud"
        android:layout_width="380dp"
        android:layout_height="220dp"
        android:background="@drawable/thinking_cloud_icon_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_third_frag"
        android:layout_width="350dp"
        android:layout_height="130dp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:textAlignment="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="@+id/iv_thinking_cloud"
        app:layout_constraintEnd_toEndOf="@id/iv_thinking_cloud"
        app:layout_constraintTop_toTopOf="@id/iv_thinking_cloud" />

</androidx.constraintlayout.widget.ConstraintLayout>